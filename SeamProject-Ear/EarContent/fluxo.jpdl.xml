<?xml version="1.0" encoding="UTF-8"?>
<pageflow-definition xmlns="http://jboss.com/products/seam/pageflow"
					 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
					 name="login">

	<start-page name="start" view-id="/bemvindo.xhtml">
		<transition to="empresaDecision" name="comecar"/>
	</start-page>					 
	
	<decision name="empresaDecision" expression="#{authenticator.empresa}">
		<transition to="trechos" name="true"/>
		<transition to="clienteDecision" name="false"/>
	</decision>
	
	<decision name="clienteDecision" expression="#{authenticator.comprador}">
		<transition to="cliente" name="true"/>
		<transition to="erro" name="false"/>
	</decision>
	
	<page view-id="/trechos.xhtml" name="trechos">
		<end-conversation/>
		<redirect/>
	</page>
	
	<page view-id="/cliente.xhtml" name="cliente">
		<end-conversation/>
		<redirect/>
	</page>
	
	<page view-id="/error.xhtml" name="erro">
		<end-conversation/>
		<redirect/>
	</page>

					 
</pageflow-definition>
